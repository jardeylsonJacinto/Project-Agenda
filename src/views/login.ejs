<%- include('includes/head') %>
<%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie a sua conta logo abaixo</p>

          <%- include('includes/messages'); %>
          
          <div class="row">
            <div class="col-lg">
              <h4>Faça o seu cadastro</h4>
              <p>Crie a sua conta</p>

              <form action="/login/register" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Endereço de email</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ex.: nome@gmail.com">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Senha</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>
            </div>


            <div class="col-lg">
              <h4>Entrar no sistema</h4>
              <p>Entre na sua conta</p>

              <form action="/login/login" method="post">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Endereço de email</label>
                  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ex.: nome@gmail.com">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Senha</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                </div>
                <button type="submit" class="btn btn-primary my-4">Entrar</button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>
<%- include('includes/footer') %>